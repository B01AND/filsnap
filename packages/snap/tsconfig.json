{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "../../node_modules"
      ],
      "@filecoin-shipyard/lotus-client-provider-nodejs": [
        "./@types/lotus-client-provider-nodejs"
      ]
    },
    "outDir": "./build",
    "types": [
      "@types/chai",
      "@types/mocha",
      "@types/sinon",
      "@types/sinon-chai"
    ],
    "typeRoots": [
      "./@types",
      "./node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*ts"
  ]
}
