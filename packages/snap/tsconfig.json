{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "../../node_modules"
      ],
      "@zondax/filecoin-signer-wasm": [
        "./@types/filecoin-signer-wasm"
      ],
      "@filecoin-shipyard/lotus-client-rpc": [
        "./@types/lotus-client-rpc"
      ],
      "@filecoin-shipyard/lotus-client-provider-browser": [
        "./@types/lotus-client-provider-browser"
      ],
      "@filecoin-shipyard/lotus-client-schema": [
        "./@types/lotus-client-schema"
      ]
    },
    "outDir": "./build",
    "types": [
      "@types/chai",
      "@types/mocha",
      "@types/sinon",
      "@types/sinon-chai",
    ],
    "typeRoots": [
      "./@types",
      "./node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*ts",
  ]
}
